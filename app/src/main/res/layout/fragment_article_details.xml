<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText">



    <include layout="@layout/back_button"
        android:id="@+id/back_button">
    </include>


    <TextView android:id="@+id/article_title"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="article balbalbalbalbal"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/back_button"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="10dp"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="350dp"
        android:layout_height="430dp"
        app:layout_constraintTop_toBottomOf="@+id/article_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/movie_card"
        android:layout_marginTop="15dp"
        android:backgroundTint="@color/lightgray"
        >

        <ImageView

            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/article_image"
            android:src="@drawable/success_image"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="lorem sadasdddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddddd"
            android:layout_marginTop="200dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:textColor="@color/darkGray"
            android:id="@+id/article_description"/>
















    </com.google.android.material.card.MaterialCardView>










</androidx.constraintlayout.widget.ConstraintLayout>